{% extends "layout.twig" %}

{% block content %}

<div class="canvas">

{% include "header.twig" %}

<section>
    {{widget('feature', 'featurehome', {"header": "profile", "strapline":"profile", "buttonText":"Lorem Ipsum","defaultBgImg": asset('images/feature-bg.jpg'), 'positionTopPercentage': '0','showBtn': true})|raw}}
</section>

<div class="main wrapper clearfix">
    {{zone('main')|raw}}
</div>

<ul class="headerborder">
   <li class="color1"></li>
   <li class="color2"></li>
   <li class="color3"></li>
</ul>
<footer class="bk-footer">
    <div class="wrapper clearfix">
        <div class="responsivecolumns columns-three-33-34-33">
            <div class="column columns-three-left">
                {{widget('companyname', 'footercolumn1companyname', {"business": "profile"})|raw}}
            </div>
            <div class="column columns-three-middle">
                {{widget('content', 'footercolumn2content1', {"content":"<h4>IPSUMS</h4>"})|raw}}
                {{widget('profile', 'footercolumn2profileaddress', { 'profileType':'address', 'address':'profile'})|raw}}
            </div>
            <div class="column columns-three-right">
                {{widget('content', 'footercolumn3content1', {"content":"<h4>CONTACTO</h4>"})|raw}}
                {{widget('profile', 'footercolumn3profileemail', { 'profileType':'email'})|raw}}
                {{widget('profile', 'footercolumn3profilephone', { 'profileType':'phone'})|raw}}
            </div>
        </div>
    </div>
</footer>

</div>

{% endblock %}
